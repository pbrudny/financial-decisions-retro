{
  "name": "financial-decisions-retro",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build:shared": "npm run build -w shared",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "test": "npm run build:shared && npm test -w shared && npm test -w server",
    "lint": "eslint . --max-warnings 0",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0"
  }
}
